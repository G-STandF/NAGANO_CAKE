<div class="container">
  <div class="row">
    <h3 class="m-3 bg-light">
      <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集画面
    </h3>
  </div>
  <%= form_with model: [:admin,@customer] do |f| %>
    <div class="field row">
      <div class="col-2"><%= f.label :customer_id, "会員ID" %></div>
      <div class="col-6"><%= @customer.id %></div>
    </div>
    <div class="field row">
      <div class="col-2"><%= f.label :name, "氏名" %></div>
      <div class="col-6 form-inline">
        <%= f.text_field :last_name, class: "form-control mr-2 mb-2" %>
        <%= f.text_field :first_name, class: "form-control mb-2" %>
      </div>
    </div>
    
    <div class="field row">
      <div class="col-2"><%= f.label :name_kana, "フリガナ" %></div>
      <div class="col-6 form-inline">
        <%= f.text_field :last_name_kana, class: "form-control mr-2 mb-2" %>
        <%= f.text_field :first_name_kana, class: "form-control mb-2" %>
      </div>
    </div>
    
    <div class="field row">
      <div class="col-2"><%= f.label :address, "住所" %></div>
      <div class="col-6"><%= f.text_field :address, class: "form-control mb-2" %></div>
    </div>
    
    <div class="field row">
      <div class="col-2"><%= f.label :telephone_number, "電話番号" %></div>
      <div class="col-6"><%= f.text_field :telephone_number, class: "form-control mb-2" %></div>
    </div>
    
    <div class="field row">
      <div class="col-2"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-6"><%= f.email_field :email, autocomplete: "email", class: "form-control mb-2" %></div>
    </div>
    
    <div class="field row">
      <div class="col-2"><%= f.label :is_deleted, "会員ステータス" %></div>
      <div class="col-6">
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_deleted, "退会", value: true %>
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, "有効", value: false %>
       </div>
    </div>
    <div class="field row">
      <div class="col-2"></div>
      <div class="col-6 mb-5 mt-3"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
    </div>
  <% end %>
</div>