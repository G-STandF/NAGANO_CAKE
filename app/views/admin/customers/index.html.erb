<div class="container">
  <div class="row">
    <h3 class="m-5 bg-light">会員一覧</h3>
  </div>
  <div class="row mb-5">
    <table class="table table-border table-hover">
      <thead>
        <tr>
          <td>会員ID</td>
          <td>氏名</td>
          <td>メールアドレス</td>
          <td>ステータス</td>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer) do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
              <% if customer.is_deleted == false %>
                <td class="text-success">有効</td>
              <% elsif %>
                <td class="text-danger">退会</td>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @customers %>
  </div>
</div>