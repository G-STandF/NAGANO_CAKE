<div class="container">
  <%= form_with model: [:admin,@product] do |f| %>
    <div class="row">
      <h3 class="m-3 bg-light">商品新規登録</h3>
    </div>

    <div class="field row">
      <div class="col-2"><%= f.label :image,"商品画像" %></div>
      <div class="col-6">
        <div class="custom-file mb-2">
          <%= f.file_field :image, class: "custom-file-input", id: "inputGroupFile04" %>
          <label class="custom-file-label" for="inputGroupFile04">ファイルを選んでください</label>
        </div>
      </div>
    </div>

    <div class="field row">
      <div class="col-2"><%= f.label :name,"商品名" %></div>
      <div class="col-6">
        <%= f.text_field :name, class: "form-control mb-2",placeholder: "例）ショートケーキ" %>
      </div>
    </div>

    <div class="field row">
      <div class="col-2"><%= f.label :intoduction,"商品説明" %></div>
      <div class="col-6">
        <%= f.text_area :introduction, class: "form-control mb-2",placeholder: "例）イチゴをたっぷり使いました！" %>
      </div>
    </div>

    <div class="genre field row">
      <div class="col-2"><%= f.label :genre_id,"ジャンル" %></div>
      <div class="col-6">
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), class: "mb-2" %>
      </div>
    </div>

    <div class="field row">
      <div class="col-2"><%= f.label :price,"税抜価格（円）" %></div>
      <div class="col-4">
        <%= f.text_field :price, class: "form-control mb-2",placeholder: "例）1000" %>
      </div>
    </div>

    <div class="field row">
      <div class="col-2"><%= f.label :is_sales,"販売ステータス" %></div>
      <div class="col-6">
        <%= f.radio_button :is_sales, true %>
        <%= f.label :is_sales, '販売中', value: true %>
        <%= f.radio_button :is_sales, false %>
        <%= f.label :is_sales, '販売停止中', value: false %>
      </div>
    </div>

    <div class="row my-5">
      <div class="col-2"></div>
      <div class="col-6 form-inline">
        <div class="mr-5">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <%end%>
</div>



