<h1>商品詳細</h1>
<%= image_tag @product.image, size: "300x250" %>

<table>
  <tbody>
    <tr>
      <td>商品名</td>
      <td><%= @product.name%></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @product.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @product.genre.name %></td>
    </tr>
    <tr>
      <td>
        税込み価格</br>
        (税抜価格)
      </td>
      <td>
        <%= @product.with_tax_price.to_s(:delimited) %>(<%= @product.price.to_s(:delimited) %>)円
      </td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td>
        <% if @product.is_sales == true %>
          販売中
        <%else%>
        　販売停止中
        <%end%>
      </td>
    </tr>
  </tbody>
</table>
<%= link_to '編集する', edit_admin_product_path(@product.id), class: "btn btn-success" %>
