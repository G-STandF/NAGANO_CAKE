<div class="container mt-5 mb-5">
  <h4 class="bg-light px-2">商品詳細</h4>
  <div class="row">
    <div class="col-5">
      <%= image_tag @product.get_image(300,250) %>
    </div>
    <div class="col-5">
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @product.name%></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @product.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @product.genre.name %></td>
          </tr>
          <tr>
            <td>
              税込み価格</br>
              (税抜価格)
            </td>
            <td>
              ￥<%= @product.with_tax_price.to_s(:delimited) %></br>
              (￥<%= @product.price.to_s(:delimited) %>)
            </td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <% if @product.is_sales == true %>
                <p class="text-success fw-bold">販売中</p>
              <%else%>
              　<p class="text-secondary fw-bold">販売停止中</p>
              <%end%>
            </td>
          </tr>
        </tbody>
      </table>
      <%= link_to '編集する', edit_admin_product_path(@product.id), class: "btn btn-success" %>
    </div>
  </div>
</div>