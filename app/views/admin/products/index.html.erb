<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <h4 class="bg-light px-2">商品一覧</h4>
      <%= link_to new_admin_product_path, class: "btn pull-right new_product" do %>
        <i class="fas fa-plus fa-2x"></i>
      <%end%>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @products.each do |product| %>
        <tbody>
          <tr>
            <td><%= product.id %></td>
            <td>
              <%= link_to product.name, admin_product_path(product.id) %>
            </td>
            <td>￥<%= product.price.to_s(:delimited) %></td>
            <td><%= product.genre.name %></td>
            <td>
              <% if product.is_sales == true %>
                <p class="text-success fw-bold">販売中</p>
              <%else%>
              　<p class="text-secondary fw-bold">販売停止中</p>
              <%end%>
            </td>
          </tr>
        </tbody>
        <%end%>
      </table>
    </div>
  </div>
  <div class="text-center"><%= paginate @products %></div>
</div>

