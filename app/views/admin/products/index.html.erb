<h1>商品一覧</h1>

<div><%= link_to "+", new_admin_product_path %></div>

<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <% @products.each do |item| %>
  <tbody>
    <tr>
      <td><%= product.id %></td>
      <td>
        <%= link_to product.name, admin_product_path(product.id) %>
      </td>
      <td><%= product.price %></td>
      <td><%= product.genre_id %></td>
      <td><%= product.is_sale %></td>
    </tr>
  </tbody>
  <%end%>
</table>
<%= paginate @products %>