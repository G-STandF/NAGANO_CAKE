<h1>商品一覧</h1>

<div><%= link_to "商品新規登録", new_admin_product_path %></div>

<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <% @products.each do |product| %>
  <tbody>
    <tr>
      <td><%= product.id %></td>
      <td>
        <%= link_to product.name, admin_product_path(product.id) %>
      </td>
      <td><%= product.price %></td>
      <td><%= product.genre.name %></td>
      <td>
        <% if product.is_sales == true %>
          販売中
        <%else%>
        　販売停止中
        <%end%>
      </td>
    </tr>
  </tbody>
  <%end%>
</table>
<%= paginate @products %>