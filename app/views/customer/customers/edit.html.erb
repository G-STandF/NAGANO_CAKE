<div class="container">
  <%= form_with model: @customer do |f| %>
    <div class="row">
      <div class="py-2"><h3>会員情報編集</h3></div>
    </div>
    
    <div class="field row">
      <div class="col-2"><%= f.label :name, "氏名" %></div>
      <div class="col-6">
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>
    </div>
  
    <div class="field row">
      <div class="col-2"><%= f.label :name_kana, "フリガナ" %></div>
      <div class="col-6">
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>
    </div>
    
    <div class="field row">
      <div class="col-2"><%= f.label :postal_code, "郵便番号" %></div>
      <div class="col-6"><%= f.text_field :postal_code %></div>
    </div>
    
    <div class="field row">
      <div class="col-2"><%= f.label :address, "住所" %></div>
      <div class="col-6"><%= f.text_field :address %></div>
    </div>
    
    <div class="field row">
      <div class="col-2"><%= f.label :telephone_number, "電話番号" %></div>
      <div class="col-6"><%= f.text_field :telephone_number %></div>
    </div>
    
    <div class="field row">
      <div class="col-2"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-6"><%= f.email_field :email, autocomplete: "email" %></div>
    </div>
    
    <div class="row">
      <div class="form-inline">
        <div class="m-5">
          <%= f.submit "編集内容を保存", class: "btn btn-success" %>
        </div>
        <div class="m-5">
          <%= link_to "退会する", customers_confirm_path, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>