<div class='container mt-5'>
  <div class='row justify-content-center'>
    <div class='col-md-12'>
      <div class="row">
        <div class="col-md-3">
        <%= render 'genre', genres: @genres %>

        </div>
      <div class="item-img col-md-6">
        <%= image_tag @product.get_image(400, 400) %>
      </div>
      <div class="col-md-3">
        <h2>
          <%= @product.name %>
        </h2>
        <p><%= @product.introduction %></p>

        <p>¥<%= @product.with_tax_price.to_s(:delimited) %>(税込価格)</p>
      </div>
      </div>
      </div>
    </div>
  </div>
</div>