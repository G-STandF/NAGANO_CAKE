<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
  	<div class="col-2">
      <%= render 'customer/products/genre', genres: @genres %>
    </div>
    <div class="col-md-10">
      <h4 class="px-2"><%= @genre.name %>一覧(全<%= @products.count %>件)</h4>
      <div class="d-flex justify-content-start flex-row flex-wrap mt-3">
        <% @products.each do |product| %>
          <% if product.is_sales == true %>
            <div class="card m-1">
            <%= link_to product_path(product.id), class: "text-dark" do %>
              <div class="card-img-top"><%= image_tag product.get_image(200, 200) %></div>
              <div class="card-title lead"><h6 class="text-center"><%= product.name %></h6></div>
          <% end %>
          <div>¥<%= product.with_tax_price.to_s(:delimited) %></div>
        <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>