<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-9">
      <h4 class="bg-light px-2 ">ショッピングカート</h4>

      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, data: { confirm: 'カート内商品を全て削除しますか？' }, class: "btn btn-danger" %>

      <table class="table table-hover">
        <thead>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>

          <td>
            <%= image_tag cart_item.product.get_image(50, 50) %>
            <%= cart_item.product.name %>
          </td>
          <td>￥<%= cart_item.product.with_tax_price.to_s(:delimited) %></td>
          <td><%= render 'count_form', cart_item: cart_item %></td>
          <td>￥<%= cart_item.subtotal.to_s(:delimited) %></td>
          <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
        </tbody>
          <%end%>
      </table>
      <div class="row justify-content-end">
        <div class="col-md-4 justify-content-end">
          <table class="table table-hover">
            <td>合計金額</td>
            <td>¥<%= @total.to_s(:delimited) %></td>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-2">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>
    <div class="col-md-2">
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    </div>
  </div>

</div>




