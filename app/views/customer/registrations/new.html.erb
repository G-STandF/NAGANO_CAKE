<div class="container">
  <div class="row">
    <h3 class="my-5 bg-light">新規会員登録</h3>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customer/shared/error_messages", resource: resource %>
    
    <div class="field row mb-3">
      <div class="col-3"><%= f.label :name, "名前" %></div>
      <div class="col-6 form-inline">
        <%= f.label :last_name, "(姓)", class: "pr-2" %>
        <%= f.text_field :last_name, autofocus: true, class: "form-control mr-2" %>
        <%= f.label :first_name, "(名)", class: "pr-2" %>
        <%= f.text_field :first_name, class: "form-control mr-2" %>
      </div>
    </div>
    
    <div class="field row mb-3">
      <div class="col-3"><%= f.label :name_kana, "フリガナ" %></div>
      <div class="col-6 form-inline">
        <%= f.label :last_name_kana, "(セイ)", class: "pr-2" %>
        <%= f.text_field :last_name_kana, class: "form-control mr-2" %>
        <%= f.label :first_name_kana, "(メイ)", class: "pr-2" %>
        <%= f.text_field :first_name_kana, class: "form-control mr-2" %>
      </div>
    </div>
  
    <div class="field row mb-3">
      <div class="col-3"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-6"><%= f.email_field :email, autocomplete: "email", class: "form-control" %></div>
    </div>
    
    <div class="field row mb-3">
      <div class="col-3"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></div>
      <div class="col-6"><%= f.text_field :postal_code, class: "form-control" %></div>
    </div>
    
    <div class="field row mb-3">
      <div class="col-3"><%= f.label :address, "住所" %></div>
      <div class="col-6"><%= f.text_field :address, class: "form-control" %></div>
    </div>
    
    <div class="field row mb-3">
      <div class="col-3"><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></div>
      <div class="col-6"><%= f.text_field :telephone_number, class: "form-control" %></div>
    </div>
  
    <div class="field row mb-3">
      <div class="col-3"><%= f.label :password, "パスワード(6文字以上)" %></div>
      <div class="col-6"><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></div>
    </div>
  
    <div class="field row mb-3">
      <div class="col-3"><%= f.label :password_confirmation, "パスワード(確認用)" %></div>
      <div class="col-6"><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></div>
    </div>
  
    <div class="actions row mb-3">
      <div class="col-3"></div>
      <div class="col-6"><%= f.submit "新規登録", class: "btn btn-success" %></div>
    </div>
  <% end %>
  
  <div class="row">
    <p class="bg-light">既に登録済みの方</p>
  </div>
  <%= render "customer/shared/links" %>こちらからログインしてください。
  </div>
