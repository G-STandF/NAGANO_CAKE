<div class="container">
  <div class="col-md-3 offset-md-1">
    <h4 class="bg-light my-4 text-center">注文情報入力</h4>
  </div>

  <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
    <h4>支払方法</h4>
    <div class="form-group row">
      <div class="col-md-6 ml-5">
        <%= f.radio_button :payment_method, Order.payment_methods.key(0), checked: true %>
        <%= f.label :payment_method, "クレジットカード" %></br>
      
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method, "銀行振込" %>
      </div>
    </div>
  
    <h4>お届け先</h4>
    <div class="form-group row">
      <div class="col-md-6 ml-5">
        <%= f.radio_button :address_option, "0" %>
        <%= f.label :address_option, "ご自身の住所" %>
      </div>
      <div class="col-md-8 ml-5">
        <span class="ml-3">〒<%#= current_customer.postal_code %>  <%#= current_customer.address %></span><br>
        <span class="ml-3"><%#= current_customer.last_name %> <%#= current_customer.first_name %></span>
      </div>
    </div>
    
    <div class="form-group row">
      <div class="col-md-6 ml-5">
        <%= f.radio_button :address_option, "1" %>
        <%= f.label :address_option, "登録済住所から選択" %>
      </div>
      <div class="col-md-8 ml-5">
        <span class="ml-3">
          <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display), prompt: "住所を選択してください" %>
        </span>
      </div>
    </div>
    
    <div class="form-group row">
      <div class="col-md-6 ml-5">
        <%= f.radio_button :address_option, "2" %>
        <%= f.label :address_option, "新しいお届け先" %>
      </div>
    </div>
    
    
    <div class="row ml-5">
      <%= f.label :post_code, "郵便番号（ハイフンなし）" , class: "col-3 col-form-label " %>
      <div class="col-3">
        <%= f.text_field :post_code, class: "form-control form-control-sm"  %>
      </div>
    </div>
    
    <div class="row ml-5">
        <%= f.label :address, "住所" , class: "col-sm-3 col-form-label" %>
      <div class="col-6">
        <%= f.text_area :address, class: "form-control form-control-sm"  %>
      </div>
    </div>
  
    <div class="row ml-5 mt-2">
      <%= f.label :name, "宛名" , class: "col-3 col-form-label " %>
      <div class="col-3">
        <%= f.text_field :name , class: "form-control form-control-sm" %>
      </div>
    </div>
  
    <div class="row mt-2 justify-content-center">
      <div class="col-2 mx-3">
        <%= f.submit "確認画面へ進む", class: "btn btn-primary " %>
      </div>
    </div>
</div>

<% end %>